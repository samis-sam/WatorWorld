<Window x:Class="WatorWorld.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatorWorld"
        mc:Ignorable="d"
        Title="StartupWindow" Height="180" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <!-- Settings -->
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Text="Wator World Simulation" HorizontalAlignment="Center" 
                   FontSize="22" />
        
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Grid Width: " VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Column="2" Grid.Row="3" Name="GridWidthTextBox" Width="100" HorizontalAlignment="Right" Text="5"
                 PreviewTextInput="NumberValidationTextBox" />
        
        <TextBlock Grid.Column="1" Grid.Row="5" Text="Grid Height: " VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox Grid.Column="2" Grid.Row="5" Name="GridHeightTextBox" Width="100" HorizontalAlignment="Right" Text="5"
                 PreviewTextInput="NumberValidationTextBox" />
        
        <Button x:Name="StartButton" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" Margin="50, 0" Content="Start" Click="StartButton_Click" />
    </Grid>

</Window>
